<h1>Register Here!</h1>

<section id="register">
  <%= form_for @user do |f| %>
    <%= f.label :name, "Name (first & last)"%>
    <%= f.text_field :name%>
    <%= f.label :email%>
    <%= f.text_field :email%>
    <%= f.label :phone%>
    <%= f.text_field :phone%>
    <%= f.submit "Submit" %>
  <% end %>
</section>