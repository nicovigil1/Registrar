<!DOCTYPE html>
<html>
  <head>
    <title>Registrar</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav>
      <ul>
        <% if current_user %>
          <li><%= link_to 'Dashboard', user_path(current_user) %></li>
        <% end %>
        <%# <li><%= link_to 'Registries', registries_path </li> %>
      </ul>
    </nav>
    <% if flash[:errors] %>
        <p><%= flash[:errors] if flash[:errors]%></p>
    <% end %>
    <%= yield %>
  </body>
</html>
